#!/bin/sh

echo -e '\n\n\nInstalling Typescript\n\n\n'
yarn add -D typescript ts-node 1> /dev/null

echo -e "\n\n\nInstalling ESLint and Prettier dependencies\n\n\n"
yarn add -D \
    @typescript-eslint/eslint-plugin \
    @typescript-eslint/parser \
    eslint \
    eslint-config-airbnb \
    eslint-config-prettier \
    eslint-plugin-import \
    eslint-plugin-jest \
    eslint-plugin-jsx-a11y \
    eslint-plugin-prettier \
    eslint-plugin-react \
    eslint-plugin-security \
    prettier 1> /dev/null

echo -e "\n\n\nInstalling Jest dependencies\n\n\n"
yarn add -D \
    jest \
    ts-jest 1> /dev/null

echo -e "\n\n\nInstalling other dev-dependencies\n\n\n"
yarn add -D \
    @types/jest \
    @types/node \
    nodemon \
    tsconfig-paths 1> /dev/null

echo -e "\n\n\nDownloading config files using wget\n\n\n"
wget -q https://raw.githubusercontent.com/BytecodeAgency/Coding-Standards/master/.gitignore
wget -q https://raw.githubusercontent.com/BytecodeAgency/Coding-Standards/master/.gitlab/CODEOWNERS && mkdir .gitlab && mv CODEOWNERS .gitlab
wget -q https://raw.githubusercontent.com/BytecodeAgency/Coding-Standards/master/.editorconfig
wget -q https://raw.githubusercontent.com/BytecodeAgency/Coding-Standards/master/.nodemon.jso
wget -q https://raw.githubusercontent.com/BytecodeAgency/Coding-Standards/master/jest.config.js
wget -q https://raw.githubusercontent.com/BytecodeAgency/Coding-Standards/master/.eslintrc.js
wget -q https://raw.githubusercontent.com/BytecodeAgency/Coding-Standards/master/.eslintignore
wget -q https://raw.githubusercontent.com/BytecodeAgency/Coding-Standards/master/.prettierrc.js
wget -q https://raw.githubusercontent.com/BytecodeAgency/Coding-Standards/master/tsconfig.json

echo "\n\n\nCreating file structure\n\n\n"
mkdir src
touch src/index.ts

echo "\n\n\nCompleted! If you see no errors you're good to go! Just remove the files you wont need\n"

echo "Make sure to add these scripts to your package.json:"
echo '"start": "ts-node -r tsconfig-paths/register src/index.ts",'
echo '"dev": "nodemon",'
echo '"build": "tsc --build tsconfig.json",'
echo '"lint": "eslint src/**/*.ts",'
echo '"lint:fix": "yarn run lint --fix",'
echo '"test": "jest",'
echo '"test:watch": "jest --watch",'
echo '"test:ci": "jest --coverage"'

{
  "extends": "airbnb",
  "env": {
    "es6": true
  },
  "plugins": ["jquery"],
  "rules": {
    "strict": 1,
    "eol-last": 1,
    "no-else-return": 0,
    "max-len": [1, 150, 2],
    "prefer-arrow-callback": 2,
    "prefer-template": 1,
    "indent": [1, 4, { "SwitchCase": 1, "VariableDeclarator": 1 }],
    "no-loop-func": 2,
    "no-nested-ternary": 1
  }
}
